doctype html
html
  head
    title SmartHive-Humidity
    meta(charset='utf-8')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')

    link(href='stylesheets/layout.css', rel='stylesheet', type='text/css', media='all')
  body#top
    .wrapper.row1
      header#header.hoc.clear
        #logo.fl_left
          h1(style='cursor: pointer; cursor: hand;')
            a#home SmartHive-Humidity Readings
    .wrapper.row2(style='height:100%;')
      nav.navbar.navbar-inverse#mainav.hoc.clear
        .container-fluid
          ul.nav.navbar-nav(style='height:100%; display:inline-block; height:100%;')
            li(style='cursor: pointer; cursor: hand;')
              a(href='/home') Home
            li(style='cursor: pointer; cursor: hand;')
              a#temp Temperature
            li.active(style='cursor: pointer; cursor: hand;')
              a#humidity Humidity
            li(style='cursor: pointer; cursor: hand;')
              a#weight Weight
            li(style='cursor: pointer; cursor: hand;')
              a#gyro Gyroscope
    .wrapper.row3
      main.hoc.container.clear(styles='width:100%;')
        .sidebar.one_quarter.first(styles='width:30%;')
          h4 Humidity Readings
          textarea#txtHumi(readonly='', rows='4', cols='50', style='height:350px; width:220px; resize:none; overflow:auto; readonly;')
        .content.three_quarter(styles='width:70%;')
          h1  Humidity sensor reading Data:
          canvas#humidityReadings(style='width:100%')
        .clear
    .wrapper.row5
      #copyright.hoc.clear
        p.fl_left
          | Copyright Â© 2015 - All Rights Reserved -
          a(href='#') www.SmartHive.tssg.org
    script(type='text/javascript', src='javascripts/humidityChart.js')
